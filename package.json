{
  "name": "openroll-app",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "ci-update": "npm ci && npm run update-submodules",
    "update": "npm install && npm run update-submodules",
    "dev": "vite",
    "build": "tsc && vite build",
    "build-gh-pages": "tsc && vite build --base=/openroll/",
    "analyze": "ANALYZE=true vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "test": "vitest run --environment jsdom",
    "typecheck": "tsc --noEmit",
    "update-submodules": "git submodule update --init --recursive && git submodule sync"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@codemirror/autocomplete": "^6.18.6",
    "@uiw/react-codemirror": "^4.24.2",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router-dom": "^6.30.1",
    "zustand": "^4.5.7"
  },
  "devDependencies": {
    "@dice-roller/rpg-dice-roller": "^5.5.1",
    "@eslint/js": "^9.30.1",
    "@testing-library/react": "^16.3.0",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "@vitejs/plugin-react": "^4.6.0",
    "eslint": "^9.30.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "jsdom": "^26.1.0",
    "pngjs": "^7.0.0",
    "rollup-plugin-visualizer": "^6.0.3",
    "sharp": "^0.34.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "vite": "^7.0.4",
    "vite-plugin-pwa": "^1.0.2",
    "vitest": "^3.2.4"
  }
}
