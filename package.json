{
  "name": "openroll-app",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "ci-update": "npm ci && npm run update-submodules",
    "update": "npm install && npm run update-submodules",
    "dev": "vite",
    "build": "tsc && vite build",
    "build-gh-pages": "tsc && vite build --base=/openroll/",
    "analyze": "ANALYZE=true vite build",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:js": "eslint .",
    "lint:css": "stylelint \"src/**/*.{css,scss}\"",
    "preview": "vite preview",
    "test": "vitest run",
    "typecheck": "tsc --noEmit",
    "update-submodules": "git submodule update --init --recursive && git submodule sync",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "dependencies": {
    "@ark-ui/react": "^5.18.3",
    "@codemirror/autocomplete": "^6.18.6",
